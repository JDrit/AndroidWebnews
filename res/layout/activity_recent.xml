<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="edu.rit.csh.androidwebnews.RecentFragment"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
	<TextView
	    android:id="@+id/recent_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CSH Webnews"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <fragment android:name="edu.rit.csh.androidwebnews.RecentFragment"
        android:id="@+id/recent_fragment"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:text="Mark Read"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>